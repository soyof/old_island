.news-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding: 5px;
}
.news-author_time {
  margin: 10rpx 0 20rpx 10rpx;
}
.news-author_time image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.news-author_time text {
  margin-left: 20rpx;
  margin-bottom: 5rpx;
  font-size: 26rpx;
  vertical-align: middle;
}
.news-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #666;
  margin-bottom: 10px;
  margin-left: 10px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.news-image {
  width: 100%;
  height: 340rpx;
  margin: 0 auto;
  margin-bottom: 15px;
}
.news-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like {
  font-size: 12px;
  flex-direction: row;
  margin-left: 10px;
  line-height: 16px;
}
.post-like image {
  width: 16px;
  height: 16px;
  margin-right: 5px;
  vertical-align: middle;
}
.post-like text {
  color: #666;
  vertical-align: middle;
  margin-right: 20px;
}
